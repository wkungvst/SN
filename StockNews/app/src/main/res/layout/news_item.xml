<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/news_card_selector"
    android:padding="10dp"
    android:layout_marginTop="13dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/news_title"
        android:textSize="21sp"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/news_summary"
        android:layout_below="@+id/news_title"
        android:layout_marginTop="10dp"
        android:textSize="13sp"
        android:textColor="#777777"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/news_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_summary"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textSize="11sp"
        android:background="#dddddd"
        android:textColor="#555555"
        />

    <TextView
        android:id="@+id/news_time"
        android:layout_below="@+id/news_symbol"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/to_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/news_source"
            android:background="@drawable/news_source_background"
            android:padding="4dp"
            android:textSize="9sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_toRightOf="@+id/news_source"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/next_arrow"/>
    </RelativeLayout>

</RelativeLayout>