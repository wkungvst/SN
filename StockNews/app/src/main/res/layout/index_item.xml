<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/index_item_container"
    android:layout_height="wrap_content"
    android:background="@drawable/index_card_selector"
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/index_symbol"
        android:textStyle="bold"
        android:textSize="21sp"
        android:layout_marginTop="5dp"
        android:textColor="#555555"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/index_name"
        android:layout_below="@+id/index_symbol"
        android:layout_marginTop="0dp"
        android:textSize="13sp"
        android:textColor="#888888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/index_lprice"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:textSize="30sp"
        android:textColor="@color/green_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/index_pchange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_marginTop="-3dp"
        android:layout_below="@+id/index_lprice"
        android:layout_alignParentRight="true"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/index_pchangep"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/index_lprice"
        android:layout_toLeftOf="@+id/index_pchange"
        android:textSize="8sp" />

    <ImageView
        android:id="@+id/index_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/index_symbol">
        
    </ImageView>
</RelativeLayout>